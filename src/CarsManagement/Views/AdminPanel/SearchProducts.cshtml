@model IEnumerable<CarsManagement.Models.Products>

@foreach (var item in Model)
{
<div><img class="img-responsive" style="height:200px;width:200px;" src="~/Data/Images/@item.ProductImage" /></div>
<div>@item.ProductName</div>
<div>@item.ProductPrice</div>
}
<form asp-action="SearchProducts">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">

            <div class="form-group">
                <label class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input type="text" placeholder="Search here.." class="form-control" />
                    <input type="button" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Search" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
